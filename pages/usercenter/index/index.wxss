/* tab-nav-item tab-active */

.tab-nav-item {
  position: relative;
}

.tab-nav-item.tab-active:before {
  width: 92%;
  height: 1px;
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -46%;
  z-index: 4;
  background: rgba(235, 235, 235, 1);
}

.badge:after, .tab-nav-item.tab-active:before,
.tab-nav-item:not(:last-child):after, .tab-nav:after {
  content: '';
}

