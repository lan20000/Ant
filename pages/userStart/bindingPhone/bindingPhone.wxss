/* pages/userStart/bindingPhone/bindingPhone.wxss */

.body{height:100vh;font-size: 50rpx;padding: 20rpx;}
.user{top: 10rpx;position: relative;height: 100%;}
.user .binding_title{color: #000;font-size: 28rpx;font-weight: 600;}
.user .binding_txt{color: #ccc;padding-top: 18rpx;font-size: 26rpx;display: block;}
.user>input{color: red;font-size: 24rpx;margin: 35rpx auto;padding: 10rpx 10rpx;height: 50rpx;border: #000 solid 1px;border-radius: 10rpx;}
.phone_pla{color: #ccc;}

.code_content{position: relative;border-radius: 10rpx;border: #000 solid 1px;padding: 10rpx;}
.code_content button,.code_content input{border: none;font-size: 24rpx;border-radius: 0rpx;}
.tab-active {width: 1rpx;height: 100%;margin-right: 50rpx;border-right: 1px solid red;}
.login_bt{color: #fff;margin: 50rpx auto;font-size: 26rpx;display: block;background-color: #333;}

.Tips_content{position: absolute;bottom: 35rpx;}
.Tips_content text:first-child{font-weight: 600;color: #333;font-size: 35rpx;display: block;}
.Tips_content text:last-child{color: #ccc;font-size: 25rpx;}